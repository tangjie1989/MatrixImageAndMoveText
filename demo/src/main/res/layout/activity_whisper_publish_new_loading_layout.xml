<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.tj.matriximageandmovetext.widget.ProgressWheel
            android:id="@+id/whisper_load_match_picture_progress"
            android:layout_width="80dp"
            android:layout_height="80dp"
            ProgressWheel:barColor="#339BB9"
            ProgressWheel:barWidth="10dp"
            ProgressWheel:rimColor="#44000000"
            ProgressWheel:rimWidth="10dp"
            ProgressWheel:spinSpeed="3dp"
            ProgressWheel:text=""
            ProgressWheel:textColor1="@color/whipser_loading_progress_text_color"
            ProgressWheel:textSize1="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_whisper_publish_new_loading_tips"
            android:textColor="@color/whipser_publish_gray"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/whisper_cancel_load_match_picture"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:text="@string/whipser_publish_cancel" />

</LinearLayout>