<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whipser_publish_transparent">

    <ImageView
        android:id="@+id/whisper_publish_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@color/whipser_publish_gray" >
    </ImageView>

    <com.tj.matriximageandmovetext.widget.ProgressWheel
        android:id="@+id/whisper_publish_photo_load_progress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        ProgressWheel:barColor="#339BB9"
        ProgressWheel:barWidth="10dp"
        ProgressWheel:rimColor="@color/whipser_publish_white"
        ProgressWheel:rimWidth="10dp"
        ProgressWheel:spinSpeed="3dp"
        ProgressWheel:text=""
        ProgressWheel:textColor1="@color/whipser_publish_black"
        ProgressWheel:textSize1="14sp" />

    <TextView
        android:id="@+id/whisper_img_cover_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:focusable="true"
        android:gravity="left"
        android:maxLength="100"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textColor="@color/whipser_publish_white"
        android:textSize="26sp"
        android:visibility="gone" />

</RelativeLayout>